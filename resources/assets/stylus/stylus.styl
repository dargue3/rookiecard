//for spinning the search icon
.rotated-right
	transform rotate(90deg)

.glyphicon.right-spinner
	animation glyphicon-spin-r 0.075s linear

@keyframes glyphicon-spin-r
	0%
  	transform rotate(0deg)
  100%
		transform rotate(90deg)

.glyphicon.left-spinner
	animation glyphicon-spin-l 0.075s linear

@keyframes glyphicon-spin-l
	0%
  	transform rotate(90deg)
  100%
		transform rotate(0deg)


.upside-down
	transform rotate(180deg)

.caret.right-spinner
	animation caret-spin-r 0.15s  linear

@keyframes caret-spin-r
	0%
		transform rotate(0deg)
	100%
		transform rotate(180deg)

.caret.left-spinner
	animation: caret-spin-l .15s  linear

@keyframes caret-spin-l
	0%
		transform rotate(180deg)
	100%
		transform rotate(0deg)		
				


		
