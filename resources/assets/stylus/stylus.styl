	animation-delay 0.2s
.slide-lg-leave
	@media only screen and (max-width xs_max_width)
		animation slide-lg-phone-leave 0.2s ease-in
	animation slide-lg-leave 0.2s ease-out
	

@keyframes slide-sm-enter
	0%
		opacity 0.2
		overflow hidden
		max-height 0
	100%
		opacity 1
		max-height 75px
		

