//SITE-WIDE ANIMATIONS

		
.modal-blur
	filter blur(3px)
.modal-unblur
	filter blur(0px)
	transition filter 0.2s ease-out
	

.fade-fast-enter
	visibility hidden
	animation fade-enter 0.1s ease-in 
	animation-delay 0.1s
.fade-fast-leave
	animation fade-leave 0.1s ease-out
	
.fade-md-enter
	visibility hidden
	animation fade-enter 0.15s ease-in
	animation-delay 0.15s
.fade-md-leave
	animation fade-leave 0.15s ease-out
	
.fade-slow-enter
	visibility hidden
	animation fade-enter 0.2s ease-in
	animation-delay 0.2s
.fade-slow-leave
	animation fade-leave 0.2s ease-out
	
//quadratic fade in
@keyframes fade-enter
	0%
		opacity 0
		visibility visible
	100%
		opacity 1
		
//quadratic fade out
@keyframes fade-leave
	0%
		opacity 1
	100%
		opacity 0

