//define some common variables
@import './variables.styl'


//mixins
has(name)
	&__{name}
		{block}
variant(name)
	&--{name}
		{block}



[v-cloak] 
	display none	
	

body
html
	height 100%
	font-family 'Fira Sans', sans-serif
	font-weight 400
	letter-spacing 0.35px
	
p
	font-size inherit
	margin-bottom 0
	font-weight inherit
	
.material-icons:hover
	cursor default
	
.bootstrap-switch
	span.bootstrap-switch-handle-on.bootstrap-switch-primary
		background link_blue
	span.bootstrap-switch-handle-off.bootstrap-switch-default
		background rc_background	
		
.switch-container
	margin-bottom 25px
	vertical-align middle
.switch-label
	margin 0px 30px 0px 10px	
	font-weight bold		

hr
	border-color darken(whitesmoke, 15%)

body
	background rc_background
		



a	
	&:visited		
	&:link
		text-decoration none
		color link_blue
	&:hover
	.material-icons:hover
		text-decoration none
		cursor pointer
		color link_blue_hover
		

.parallax-window
	min-height 400px
	background transparent

	

.nav-tabs
	margin-top 35px
	li 
		position relative
		&.active
			a
				background-color whitesmoke
				border-radius 12px 12px 0 0 
				&:hover
					background-color whitesmoke
		a
			margin-left 8px		
			padding 20px 40px
			@media screen and (max-width xs_max_width)
				padding 20px 30px
				
span.input-info
	font-size 13px
	color rc_med_gray				
				

.Tab
	position relative	
	padding 0px 10px 10px 10px
	font-size 15px
	margin 15px
	@media screen and (max-width xs_max_width)
		margin 15px
	.material-icons
		bottom 30px	
		
	+has(list)
		display flex
		list-style none
		padding 0
	
	+variant(active)
		color lighten(black, 40%)
		border-bottom 4px solid lighten(gray, 65%)
		&:hover
			color lighten(black, 40%)
			cursor default

	+variant(inactive)
		color link_blue
		&:hover
			color link_blue_hover
			cursor pointer
			
.Tab__container
	display flex
	justify-content center
	font-weight 200
	margin-top 50px
	margin-bottom 2px
		

.Media
	display flex
	margin-bottom 40px
	
	+has(thumbnail)
		border-radius 50%
		&:hover
			cursor pointer
		&:hover.--ghost
			cursor default	
		
	+has(text)
		display flex
		flex-flow column	
		justify-content flex-start
		
	+has(title)
		margin-left 10px
		font-size 16px
		display flex
		flex-flow row
		p
			margin-bottom 0

	+has(number)
		color rc_red

	+has(divider)
		color darken(whitesmoke, 30%)
		margin 0px 6px

	+has(details)
		display flex
		text-align left
		position relative
		.material-icons
			margin 13px 0px 0px 8px	
			font-size 20px
		.positions
			margin 12px 0px 0px 8px		
			font-size 16px
			color rc_med_gray
					
	+has(edit)
		display flex
		flex-flow row
		margin-bottom 55px
		div
			flex 1
		.btn
			margin 22px 0px 0px 15px
			max-height 52px
			
.TabButton
	display flex
	flex-flow row
	font-size 20px
	color white
	margin-bottom 45px
	margin-top 25px
	div
		background rc_blue
		padding 4px 18px
		&:hover
			cursor pointer
		&.active
			background rc_red
			border 0
			&:hover
				cursor default
	.first
		border-top-left-radius 3px				
		border-bottom-left-radius 3px
	.second
		border-left 1px solid darken(rc_blue, 20%)
		^[0] .first.active + .second // when first is active, don't show left border on second
			border-left 1px solid rc_blue
	.third
		border-top-right-radius 3px				
		border-bottom-right-radius 3px
		border-left 1px solid darken(rc_blue, 20%)
		^[0] .second.active + .third // when second is active, don't show left border on third
			border-left 1px solid rc_blue
	&.--just-two
		.second
			border-top-right-radius 3px				
			border-bottom-right-radius 3px
	&.--black-gray
		div
			background rc_lite_gray
			&.active
				background black
		.second
			border-left 1px solid darken(rc_lite_gray, 20%)
			^[1] .first.active + .second // when first is active, don't show left border on second
				border-left 1px solid rc_lite_gray
		.third
			border-left 1px solid darken(rc_lite_gray, 20%)
			^[1] .second.active + .third // when second is active, don't show left border on third
				border-left 1px solid rc_lite_gray
	&.--small
		font-size 17px
		div
			padding 2px 12px
		
					
		
